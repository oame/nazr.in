{
  "name": "nazrin",
  "version": "3.0.0",
  "private": true,
  "author": "oame <oame@oameya.com> (http://oameya.com/)",
  "license": "MIT",
  "homepage": "http://nazr.in",
  "engines": {
    "node": "6.2.x"
  },
  "main": "app.js",
  "scripts": {
    "postinstall": "npm --prefix client install",
    "start": "node ./bin/www",
    "test": "run-p test:*",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test:server": "nyc ava && xo",
    "test:client": "npm --prefix client test",
    "watch": "run-p watch:*",
    "watch:server": "nodemon ./bin/www",
    "watch:client": "npm --prefix client start"
  },
  "xo": {
    "semicolon": false,
    "ignores": [
      "client/**"
    ]
  },
  "dependencies": {
    "base62": "^1.1.1",
    "body-parser": "1.15.2",
    "corser": "^2.0.1",
    "express": "4.14.0",
    "mongoose": "^4.6.1",
    "mongoose-sequence": "3.0.2",
    "morgan": "^1.7.0",
    "rollbar": "^0.6.2",
    "valid-url": "1.0.9"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "coveralls": "^2.11.14",
    "dotenv": "^2.0.0",
    "nodemon": "^1.10.2",
    "npm-run-all": "^3.1.0",
    "nyc": "^8.3.0",
    "supertest": "^2.0.0",
    "xo": "^0.16.0"
  }
}
