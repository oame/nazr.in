#!/usr/bin/env node

const app = require('..')

if (process.env.NODE_ENV !== 'production') {
  const dotenv = require('dotenv')
  dotenv.load()
}

// Set port
app.set('port', process.env.PORT || 3000)

const server = app.listen(app.get('port'), () => {
  console.log('Express server listening on port', server.address().port)
})
